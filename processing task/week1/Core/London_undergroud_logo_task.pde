// Sketch to draw a rectangle that follows the mouse.
void setup()
{
    size(600, 400);
    background(255, 255, 255);
    noStroke();
}
 
void draw()
{
    fill(250,20,20);  
    circle(300,200,250);
    fill(255,255,255);
    circle(300,200,150);
    fill(20,20,250);
    rect(150,180,300,50);
    textSize(45);
    fill(250,250,250);
    text("UNDERGOUND",160,220);
}
